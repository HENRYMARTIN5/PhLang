{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pHLang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.phlang",
				"match": "\\b(if|while|for|return|end)\\b"
			},
			{
				"name": "keyword.operator.phlang",
				"match": "\\b(+|-|%//|*|^)\\b"
			}
		]
		},
		"paren-expression": {
			"begin": "\\(",
			"end": "\\)",
			"beginCaptures": {
			  "0": { "name": "punctuation.paren.open" }
			},
			"endCaptures": {
			  "0": { "name": "punctuation.paren.close" }
			},
			"name": "expression.group",
			"patterns": [{ "include": "#expression" }]
		},
		"strings": {
			"name": "string.quoted.double.phlang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.phlang",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.ph"
}